<%- include ("./partials/header.ejs")%>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/rentmap.css">
    <title>Rentmap</title>

    <span id="bhk" class="d-none">
        <%= bhk %>
    </span>
    <span id="area" class="d-none">
        <%= area %>
    </span>
    <span id="price" class="d-none">
        <%= price %>
    </span><br>
    <h1>DISPLAYING PROPERTIES FOR RENT</h1>
    <h2>Select the amenities to be dispayed-Click on a property for more details</h2>
    <div class="d-flex justify-content-around">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="police" name="amenity" value="police"
                onchange="pol_change(this)">
            <label class="form-check-label" for="police">Police Station</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="fire_station" name="amenity" value="fire_station"
                onchange="fir_change(this)">
            <label class="form-check-label" for="fire_station">Fire Station</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="hospital" name="amenity" value="hospital"
                onchange="hos_change(this)">
            <label class="form-check-label" for="hospital">Hospital</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="school" name="amenity" value="school"
                onchange="sch_change(this)">
            <label class="form-check-label" for="school">School</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="railway" name="amenity" value="railway"
                onchange="rail_change(this)">
            <label class="form-check-label" for="railway">Railway Station</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="park" name="amenity" value="park"
                onchange="par_change(this)">
            <label class="form-check-label" for="park">Parks</label>
        </div>
    </div>

    <div id="map"></div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
